{
  "name": "medical-crm",
  "version": "1.0.0",
  "description": "Modern CRM system for medical institutions",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/plugins/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:front\" \"npm run dev:back\" \"npm run dev:shared\"",
    "dev:front": "npm run dev --workspace=@medical-crm/frontend",
    "dev:back": "npm run dev --workspace=@medical-crm/backend",
    "dev:shared": "npm run dev --workspace=@medical-crm/shared",
    "build": "npm run build --workspaces --if-present",
    "build:shared": "npm run build --workspace=@medical-crm/shared",
    "build:backend": "npm run build --workspace=@medical-crm/backend",
    "build:frontend": "npm run build --workspace=@medical-crm/frontend",
    "build:plugins": "npm run build --workspace=@medical-crm/plugins",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "db:migrate": "npm run db:migrate --workspace=@medical-crm/backend",
    "db:seed": "npm run db:seed --workspace=@medical-crm/backend",
    "validate:deploy": "bash scripts/validate-deployment.sh",
    "validate:quick": "bash scripts/quick-check.sh"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/nodemailer": "^6.4.19",
    "@types/swagger-jsdoc": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.15.0",
    "lerna": "^8.1.8",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.11.0 <23.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "chart.js": "^4.5.0",
    "koa-ratelimit": "^6.0.0",
    "lodash-es": "^4.17.21",
    "validator": "^13.15.15"
  }
}
