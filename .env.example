# Database Configuration
#
# Option 1: Use DATABASE_URL (recommended for cloud deployments like Neon, Supabase, Railway)
# DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require
# DB_SSL=true
#
# Option 2: Use individual variables (recommended for local Docker development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=medical_crm_dev
DB_USER=medical_crm_user
DB_PASSWORD=medical_crm_password
DB_SSL=false
DB_SYNC_ON_START=false

# Test Database Configuration
TEST_DB_HOST=localhost
TEST_DB_PORT=5433
TEST_DB_NAME=medical_crm_test
TEST_DB_USER=medical_crm_user
TEST_DB_PASSWORD=medical_crm_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=4h
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
# For development: allow localhost
# For production: set to your frontend URL (e.g., https://your-app.railway.app)
# Multiple origins: separate with commas
CORS_ORIGIN="http://localhost:3000"

# External Services
DICEBEAR_API_URL=https://api.dicebear.com/7.x

# Plugin Configuration
SAGE_API_URL=https://api.sage.com
SAGE_CLIENT_ID=your-sage-client-id
SAGE_CLIENT_SECRET=your-sage-client-secret

# Digiforma Integration
# CRITICAL: Generate a strong random key for production (at least 32 characters)
# You can generate one with: openssl rand -base64 32
DIGIFORMA_ENCRYPTION_KEY=your-32-char-encryption-key-change-in-production
DIGIFORMA_API_URL=https://app.digiforma.com/api/v1/graphql

# Email Configuration (for reminders and document delivery)
# Set to 'true' to enable email sending, 'false' to disable
# When disabled, SMTP verification is skipped at startup
EMAIL_ENABLED=false
EMAIL_FROM_ADDRESS=noreply@medical-crm.com
EMAIL_FROM_NAME=OPEx_CRM
# SMTP server configuration (only required if EMAIL_ENABLED=true)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Alert Emails (critical error notifications)
# Sends email to ADMIN_EMAIL when 5xx errors occur
# Set to 'false' to disable, or leave empty (defaults to enabled if ADMIN_EMAIL is set)
ALERT_EMAILS_ENABLED=true

# Reminder System Configuration
ENABLE_EMAIL_REMINDERS=false
REMINDER_TIMEZONE=Europe/Paris
REMINDER_BATCH_SIZE=100
REMINDER_CRON_SCHEDULE=0 9 * * *
REMINDER_CACHE_CLEANUP_DAYS=7

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Initial Admin User (auto-created on startup if the database has no users)
# ⚠️  IMPORTANT: Set these in production to create your first admin user
# After first login, change your password immediately!
ADMIN_EMAIL=admin@medical-crm.com
ADMIN_PASSWORD=ChangeThisPassword123!
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User
