# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=medical_crm_dev
DB_USER=medical_crm_user
DB_PASSWORD=medical_crm_password
DB_SYNC_ON_START=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info

# Email/SMTP Configuration
# Backend email transport used by EmailService
SMTP_HOST=localhost
SMTP_PORT=587
# Use "true" only if your SMTP supports TLS on the specified port
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Default From identity for outgoing emails
EMAIL_FROM_ADDRESS=noreply@medical-crm.local
EMAIL_FROM_NAME=Medical CRM

# Example: Mailtrap sandbox (uncomment and set your creds)
# SMTP_HOST=smtp.mailtrap.io
# SMTP_PORT=2525
# SMTP_SECURE=false
# SMTP_USER=your-mailtrap-username
# SMTP_PASS=your-mailtrap-password
