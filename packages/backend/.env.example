# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=medical_crm_dev
DB_USER=medical_crm_user
DB_PASSWORD=medical_crm_password
DB_SYNC_ON_START=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info

# Email/SMTP Configuration
# Backend email transport used by EmailService
SMTP_HOST=localhost
SMTP_PORT=587
# Use "true" only if your SMTP supports TLS on the specified port
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Default From identity for outgoing emails
EMAIL_FROM_ADDRESS=noreply@medical-crm.local
EMAIL_FROM_NAME=OPEx_CRM

# Example: Mailtrap sandbox (uncomment and set your creds)
# SMTP_HOST=smtp.mailtrap.io
# SMTP_PORT=2525
# SMTP_SECURE=false
# SMTP_USER=your-mailtrap-username
# SMTP_PASS=your-mailtrap-password

# Reminder System Configuration
# Enable/disable email notifications for reminders (tasks, quotes, invoices)
ENABLE_EMAIL_REMINDERS=true

# Timezone for reminder processing (affects when cron jobs run)
REMINDER_TIMEZONE=Europe/Paris

# Batch size for processing reminders (entities processed per type per run)
# Increase if you have >100 tasks/quotes/invoices due on the same day
REMINDER_BATCH_SIZE=100

# Cron schedule for automatic reminder processing (default: daily at 9am)
# Format: minute hour day-of-month month day-of-week
# Examples:
#   - "0 9 * * *"    = Every day at 9:00 AM
#   - "0 */6 * * *"  = Every 6 hours
#   - "0 9,18 * * *" = Every day at 9:00 AM and 6:00 PM
REMINDER_CRON_SCHEDULE=0 9 * * *

# Number of days to keep anti-spam cache entries before cleanup
# Prevents sending duplicate notifications for the same reminder within this period
REMINDER_CACHE_CLEANUP_DAYS=7

# Frontend URL (used in email links to direct users to the CRM)
# IMPORTANT: Must be accessible by email recipients
FRONTEND_URL=http://localhost:3000
