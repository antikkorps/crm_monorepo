{
  "name": "example-logger-plugin",
  "version": "1.0.0",
  "description": "Example plugin that logs system events for demonstration purposes",
  "author": "Medical CRM Team",
  "license": "MIT",
  "main": "index.js",
  "displayName": "Example Event Logger",
  "category": "utility",
  "keywords": [
    "logging",
    "events",
    "example"
  ],
  "homepage": "https://github.com/medical-crm/plugins/example-logger",
  "enabled": true,
  "hooks": [
    "user:created",
    "user:login",
    "institution:created",
    "task:created",
    "invoice:created",
    "payment:received"
  ],
  "configSchema": {
    "type": "object",
    "properties": {
      "logLevel": {
        "type": "string",
        "enum": [
          "debug",
          "info",
          "warn",
          "error"
        ],
        "default": "info",
        "description": "Logging level for events"
      },
      "enabledEvents": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "default": [
          "user:created",
          "invoice:created"
        ],
        "description": "List of events to log"
      },
      "includeDetails": {
        "type": "boolean",
        "default": false,
        "description": "Include detailed event data in logs"
      }
    }
  },
  "defaultConfig": {
    "logLevel": "info",
    "enabledEvents": [
      "user:created",
      "invoice:created"
    ],
    "includeDetails": false
  },
  "dependencies": {
    "@pinia/testing": "^1.0.3",
    "@types/koa": "^3.0.1",
    "@types/koa__cors": "^5.0.1",
    "@types/koa__multer": "^2.0.8",
    "@types/koa__router": "^12.0.5",
    "@types/koa-bodyparser": "^4.3.13",
    "@types/koa-multer": "^1.0.5",
    "@types/koa-router": "^7.4.9",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "chart.js": "^4.5.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "graphql": "^16.12.0",
    "graphql-request": "^7.3.3",
    "joi": "^18.0.1",
    "jsdom": "^27.2.0",
    "koa": "^3.1.1",
    "koa-helmet": "^8.0.1",
    "lerna": "^9.0.1",
    "nodemailer": "^7.0.10",
    "pinia": "^3.0.4",
    "puppeteer": "^24.30.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "validator": "^13.15.23",
    "vite": "^7.2.2",
    "vitest": "^4.0.9",
    "vue": "^3.5.24",
    "vue-chartjs": "^5.3.3",
    "vue-i18n": "^11.1.12",
    "vue-router": "^4.6.3",
    "vue-tsc": "^3.1.4",
    "vuetify": "^3.10.11",
    "winston": "^3.18.3"
  }
}
